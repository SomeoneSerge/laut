{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--no-cov",
                "--pdb",
                //"${file}"
                "tests"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PATH": "${env:PATH}",
                "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}